{{ form_start(form, {'attr': {'id': 'ajaxCarteForm', 'class': 'ajax-form'}}) }}
<div class="row">
    <div class="col-md-12">
        <div class="input-group input-group-static mb-4">
            <label for="set_form_name">Nom de la Carte<span class="text-danger">*</span></label>
            {{form_widget(form.name, {'attr': {'class':'form-control', 'onfocus': 'focused(this)', 'onfocusout': 'defocused(this)'}})}}
            {{form_errors(form.name)}}
        </div>
    </div>
    <div class="col-md-12">
        <div class="input-group input-group-static mb-4">
            <label for="set_form_page">Nombre d'étoile<span class="text-danger">*</span></label>
            {{form_widget(form.nbetoile, {'attr': {'class':'form-control'}})}}
        </div>
    </div>
    <div class="col-md-12">
        <div class="input-group input-group-static mb-4">
            <label for="set_form_page">N° de Carte<span class="text-danger">*</span></label>
            {{form_widget(form.num, {'attr': {'class':'form-control'}})}}
        </div>
    </div>
    <div class="col-md-12">
        <div class="input-group input-group-static mb-4">
            <div class="form-check">
                {{form_widget(form.golden, {'attr': {'class':'form-check-input'}})}}
                <label class="custom-control-label" for="customCheck1">Or<span class="text-danger">*</span></label>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <input type="submit" value="Enregistrer" class="waves-effect waves-light btn btn-primary" style="width: 100%;" />
    </div>
</div>
{{ form_end(form) }}